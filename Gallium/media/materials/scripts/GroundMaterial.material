material GroundMaterial
{
    technique
    {
        pass
        {
            // Couleur diffuse (optionnel si tu utilises une texture)
            ambient 0.8 0.8 0.8 1.0
            diffuse 0.8 0.8 0.8 1.0
            
            // Texture appliqu√©e au sol
            texture_unit
            {
                texture ground_1.jpeg  // Remplace par le nom de ta texture
                tex_address_mode wrap
                filtering trilinear
            }
        }
    }
}